<Application x:Class="QuantDeriv.Front.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:QuantDeriv.Front">
    <Application.Resources>
        <Style x:Key="CellRightAlign" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Padding" Value="0,0,10,0"/>
        </Style>
        <Style x:Key="CellCenterAlign" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="CellCenterAlignBold" TargetType="TextBlock" BasedOn="{StaticResource CellCenterAlign}">
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="HeaderCenterAlign" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Application.Resources>
</Application>
